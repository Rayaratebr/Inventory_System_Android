<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.project_database.MainFragment">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:text="Customer" />

    <Button
        android:id="@+id/buttonAddCust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Add"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonDelCust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonAddCust"
        android:layout_marginTop="12dp"
        android:text="Delete" />

    <Button
        android:id="@+id/buttonDisCust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonDelCust"
        android:layout_alignRight="@+id/buttonDelCust"
        android:layout_below="@+id/buttonDelCust"
        android:layout_marginTop="21dp"
        android:text="Display" />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Order" />

    <Button
        android:id="@+id/buttonOrdAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignBaseline="@+id/buttonAddCust"
        android:layout_alignBottom="@+id/buttonAddCust"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonOrdDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_alignBaseline="@+id/buttonDisCust"
        android:layout_alignBottom="@+id/buttonDisCust"
        android:layout_alignLeft="@+id/buttonOrdAdd"
        android:layout_alignStart="@+id/buttonOrdAdd" />

    <Button
        android:id="@+id/buttonOrdDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display"
        android:layout_alignBaseline="@+id/buttonDelCust"
        android:layout_alignBottom="@+id/buttonDelCust"
        android:layout_alignLeft="@+id/buttonOrdDel"
        android:layout_alignStart="@+id/buttonOrdDel" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="Product" />

    <Button
        android:id="@+id/buttonProAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonOrdAdd"
        android:layout_alignBottom="@+id/buttonOrdAdd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="Add" />

    <Button
        android:id="@+id/buttonProUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonOrdDel"
        android:layout_alignBottom="@+id/buttonOrdDel"
        android:layout_alignLeft="@+id/buttonProAdd"
        android:layout_alignStart="@+id/buttonProAdd"
        android:text="Update" />

    <Button
        android:id="@+id/buttonProDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display"
        android:layout_alignBaseline="@+id/buttonOrdDis"
        android:layout_alignBottom="@+id/buttonOrdDis"
        android:layout_alignLeft="@+id/buttonProAdd"
        android:layout_alignStart="@+id/buttonProAdd" />
</RelativeLayout>
