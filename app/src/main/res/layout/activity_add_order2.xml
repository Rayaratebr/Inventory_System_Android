<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.project_database.AddOrder2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="45dp">

        <EditText
            android:id="@+id/orderDueDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderDateTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:clickable="true"
            android:editable="false"
            android:hint="dd/mm/yyyy"
            android:inputType="none" />

        <EditText
            android:id="@+id/orderDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addOrderBtn"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/addOrderBtn"
            android:layout_marginTop="89dp"
            android:clickable="true"
            android:editable="false"
            android:hint="dd/mm/yyyy"
            android:inputType="none" />

        <Button
            android:id="@+id/addOrderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="71dp"
            android:text="Add Order" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
